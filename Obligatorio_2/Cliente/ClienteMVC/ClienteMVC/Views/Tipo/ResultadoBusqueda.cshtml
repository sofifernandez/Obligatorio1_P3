@model ClienteMVC.Models.TipoViewModel

@{
    ViewData["Title"] = "Buscar";
}

<h1>Buscar</h1>

@if (Model != null)
{
    <div>
        <h4>Tipo</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NombreTipo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreTipo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DescTipo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DescTipo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CostoTipo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CostoTipo)
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
        <a asp-action="Index">Volver</a>
    </div>
}
else
{
    <div class="alert alert-danger">
        <p>No existe un tipo de cabaña con ese nombre</p>
        <div>
            <a asp-action="Index">Volver</a>
        </div>
    </div>
}
